<%= form_with(model: [@category, @operation], local: true) do |form| %>
<% if @operation.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@operation.errors.count, "error") %>
      prohibited this category from being saved:</h2>

    <ul>
      <% @operation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- Text input-->
<div class="row column">
  <div class="section-space">
    <div class="col-md-4 col-sm-4">
      <%= form.text_field :description , class: 'form-control input-md', autofocus: true, placeholder: 'Operation name' %>
    </div>
    <div class="col-md-4 col-sm-4">
      <%= form.text_field :price , class: 'form-control input-md', placeholder: 'price' %>
    </div>
    <div class="col-md-4 col-sm-4">
      <div class="actions">
        <%= form.submit class: 'btn btn-default pull-right' %>
      </div>
    </div>
    <!-- Button -->
  </div>
</div>

<% end %>
