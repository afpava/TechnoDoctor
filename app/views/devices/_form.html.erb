<%= form_with model: @device, local: true do |f| %>
    <% if @device.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% @device.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
      <!-- <div class="form-group">
        Brand: <%#= f.select :brand_id,  @brand_arr, {}, { class: "selectize form-control brand ", id: "brands_ids" } %>
      </div> -->
      <div>
        <td><%= link_to devices_path, :class=>'btn btn-primary btn-sm' do %>
           <i class="fa fa-undo"></i>
           <% end %></td>
      </div>
      <div class="form-group">
        Model: <%= f.select :model_id,  @model_arr, {}, { class: "selectize form-control", id: "models_ids" } %>
      </div>

    <div class="form-group">
      <%= f.label "Serial Number" %><br />
      <%= f.text_field :serial_num, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :imei %><br />
      <%= f.text_field :imei, class: "form-control" %>
    </div>
    <div class="actions"><%= f.submit  :class=>'btn btn-default float-right' %></div>
  </div>
<% end %>
