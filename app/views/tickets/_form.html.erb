<%= form_with model: @ticket, local: true do |form| %>


<td><%= link_to 'Back', ticket_path(@ticket), class: 'btn btn-default' %></td>

        <div class="form-group">
          Device: <%= form.select :device_id,  @device_arr, {}, { class: "selectize form-control", id: "device_ids" } %>
        </div>

          <div class="form-group">
          Collaborator: <%= form.select :collaborator, options_for_select(@collab_arr,
               @ticket&.collaborator&.id ), include_blank: true %>
          </div>
          <div class="form-group">
            Stage: <%= form.select :stage, options_for_select(@ticket_param, @ticket.stage), {}, { class: "selectize form-control", id: "device_ids" } %>
          </div>


          <div class="form-group">
            In Date:  <%= form.date_field :in_date , class: 'form-control', placeholder: "in date" %>
          </div>

          <div class="form-group">
            Disrepares: </br>
            <ol>
            <%= collection_check_boxes(:disrepares, :disrepare_ids, @disrepares, :id, :description, checked: @ticket.disrepare_ids) do |b| %>
            <li>
              <%= b.check_box %>
               <%= b.label %>
            </li>
          <% end %>
          </ol>
          </div>

          <div class="form-group">
            Parts: </br>
            <ol>
            <%= collection_check_boxes(:parts, :parts_ids, @parts, :id, :description, checked: @ticket.part_ids) do |b| %>
            <li>
              <%= b.check_box %>
               <%= b.label %>
            </li>
          <% end %>

          </ol>
          </div>

          <div class="form-group">
            Operation: </br>
            <ol>
            <%= collection_check_boxes(:operations, :operations_ids, @operations, :id, :description, checked: @ticket.operation_ids) do |b| %>
              <li>
                <%= b.check_box %>
                 <%= b.label %>
              </li>
            <% end %>
          </ol>
          </div>

        </div>

      <div class="card-body">
        <div class="col-md-9">

          </div>
              <div class="container-fluid">
                 <div class="actions">
                      <%= form.submit  class: 'btn btn btn-default' %>
                </div>
              </div>
          </div>


<% end %>
