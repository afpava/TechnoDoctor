<%= form_with(model: [@category, @brand,  @model], local: true) do |form| %>

<%= render partial: '/shared/form_errors', :locals => { obj: @brand } %>


<!-- Text input-->
<div class="row column">
  <div class="col-md-12 col-sm-12">
    <div class="col-md-6 col-sm-6">

      <%= form.text_field :description , class: 'form-control input-md', autofocus: true, placeholder: 'Brand name' %>
    </div>
    <!-- Button -->
    <div class="col-md-6 col-sm-6">
      <div class="actions">
        <%= form.submit class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </div>
</div>

<% end %>
