                  <ul class="listnone">
                    <li>Mon - Fri:<strong> 9am - 7pm</strong></li>
                    <li>Sat: <strong> 10am - 3pm</strong></li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-12 widget col-sm-4">
              <div class="well-bg widget-phone">
                <div class="well-inner"> <i class="fa fa-phone"></i>
                  <h3>Phone</h3>
                  <ul class="listnone">
                    <li>Office: 8100-123-456</li>
                    <li>Mobile: 8100-456-789</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
