<%= form_tag sessions_path , {class: 'form', role: 'form', id: 'login-nav'} do %>
	<div class="form-group">
		<%= email_field_tag :email, params[:email], class: 'form-control  mr-sm-2', autofocus: true, placeholder: 'email'%>
	</div>
	<div class="form-group">
		<%= password_field_tag :password, nil , class: 'form-control  mr-sm-2',  placeholder: 'password' %>
	</div>
	<div class="form-group">
		<%= submit_tag "Log In", class: "btn btn-outline-secondary my-2 my-sm-0" %>
	</div>
</form>
<% end %>
