<%#= link_to 'New category', categories_path(country_id: @country.id), method: :post, :class=>'btn btn-default' %>
  <%= render partial: '/pages/header', :locals => { text: "Customer: #{@customer.full_name}" } %>
  <div class="main-container">
    <!-- main container -->
    <div class="row">
<div class="testimonial-inner">
  <div class="col-md-4 col-sm-4">
    <div class="well-bg">
      <%= link_to customers_path , :class=>'btn btn-primary btn-sm' do %>
        <i class="fa fa-undo"></i>
      <% end %>

      <div class="container">

        <span class="testimonial-v2-meta">
          <h4> Customer card</h4>
        </span>
        <h3 class="testimonial-v3-name">
          <%= @customer.full_name %>
        </h3>
      </div>

      <div class="well-inner">
        <div class="testimonial-v3-caption"></br>
        <%= content_tag(:strong, "First Name: ")+ tag(:br) + @customer&.first_name + tag(:br) %>
        <%= content_tag(:strong, "Full Name: ") + tag(:br) + @customer&.full_name + tag(:br) %>
        <%= content_tag(:strong, "Last Name: ") + tag(:br) + @customer.last_name + tag(:br) %>
        <%= content_tag(:strong, "Phone number: ") + tag(:br) + @customer.phone_number + tag(:br) %>

        <tr>
          <td><%= link_to 'Edit', edit_customer_path(@customer), :class=>'btn btn-default' %></td>
        </tr>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
